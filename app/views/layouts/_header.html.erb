<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "e-Shop", root_path, id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to 'Admin Panel', admin_root_path %></li>
          <% end %>
          <li><%= link_to "#{pluralize(current_cart.cart_size, 'item')} in Cart", 
                                      cart_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Welcome, 
              <%= current_user.name %>! <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "#{pluralize(current_cart.cart_size, 'item')} in Cart", 
                                      cart_path %></li>
          <li><%= link_to "Sign up now!", signup_path %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
        </ul>
      </nav>
  </div>
</header>